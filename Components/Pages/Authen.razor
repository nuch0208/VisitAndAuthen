@page "/authen"
@using System.Text.Json.Nodes
@using VisitAndAuthen.Models
@inject HttpClient http


<div class="row">
    <div class="col-lg-8">
        <h1 class="mb-5">Edit Client</h1>

        @if (Patient == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
             <div class="row mb-3">
                <label class="col-md-4 col-form-label">เลขประจำตัวประชาชน</label>
                <div class="col-md-8">
                    <input class="form-control-plaintext" @bind="PatientDto.Cid">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label">ชื่อ</label>
                <div class="col-md-8">
                    <input class="form-control" @bind="PatientDto.Fname">
                    <span class="text-danger">@Errors["FirstName"]?[0]</span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label">นามสกุล</label>
                <div class="col-md-8">
                    <input class="form-control" @bind="PatientDto.Lname">
                    <span class="text-danger">@Errors["LastName"]?[0]</span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label">วันเกิด</label>
                <div class="col-md-8">
                    <input class="form-control" @bind="PatientDto.Birthday">
                    <span class="text-danger">@Errors["Email"]?[0]</span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label">วันเกิด</label>
                <div class="col-md-8">
                    <input class="form-control" @bind="kskdepartmentDto.Department">
                    <span class="text-danger">@Errors["Email"]?[0]</span>
                </div>
            </div>


            <div class="row">
                <div class="offset-md-4 col-md-4 d-grid">
                    <button class="btn btn-primary" >Submit</button>
                </div>
                <div class="col-md-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Clients">Cancel</a>
                </div>
            </div>
        }
    </div>
</div>

